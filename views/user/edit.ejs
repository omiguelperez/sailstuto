<div class="container">
  <form class="form-signin" action="/user/update/<%= user.id %>" method="post">
    <div class="form-group">
      <!-- Name -->
      <label for="name">Name</label>
      <input type="text" name="name" id="name" class="form-control" value="<%= user.name%>" required autofocus>
    </div>
    <div class="form-group">
      <!-- Lastname -->
      <label for="lastname">Lastname</label>
      <input type="text" name="lastname" id="lastname" class="form-control" value="<%= user.lastname%>" required>
    </div>
    <div class="form-group">
      <!-- Username -->
      <label for="username">Username</label>
      <input type="text" name="username" id="username" class="form-control" value="<%= user.username%>" required>
    </div>
    <div class="form-group">
      <!-- Email -->
      <label for="email">Email</label>
      <input type="email" name="email" id="email" class="form-control" value="<%= user.email%>" required>
    </div>

    <button class="btn btn-primary" type="submit">Acceder</button>
  </form>
</div>
